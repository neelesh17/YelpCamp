<%- include("../partials/header") %>
    <div class="container">
        
        <header class="jumbotron">
            <div class="container">
                <h1><i class="fas fa-campground"></i>Welcome To Yelp Camp</h1>
                <p>View our Hand Picked Camp Grounds From All over the world</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new Campground</a>
                </p>
                
            </div>
        </header>

        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <div class="col-md-12">
                <% if(noMatch){ %>
                    <h3>No Campground Found</h3>
                    <p>
                        <form action="/campgrounds" method="GET" class="form-inline">
                            <div class="form-group">
                                <input type="text" placeholder="Campground Search..." name="search" class="form-control">
                                <input type="submit" value="Search" class="btn btn-info">
                            </div>
                        </form>
                    </p>
                <% } %>
            </div>
            <% campGrounds.forEach(function(camp){ %>
                <div class="col-sm-6 col-md-3">
                    <div class="thumbnail">
                        <img src="<%= camp.image %>" alt="Camp Site">
                        <div class="caption">
                            <h4><%= camp.name %></h4>
                            <div>
                                <span class="badge label-primary"><i class="fas fa-thumbs-up"></i> <%= camp.likes.length %></span>
                            </div>
                            <% if (camp.rating === 0) { %>
                                <em>No reviews yet.</em>
                                <% } else { %>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star <% if (camp.rating > 1.5) { %> checked <% } %>"></span>
                                <span class="fa fa-star <% if (camp.rating > 2.5) { %> checked <% } %>"></span>
                                <span class="fa fa-star <% if (camp.rating > 3.5) { %> checked <% } %>"></span>
                                <span class="fa fa-star <% if (camp.rating > 4.5) { %> checked <% } %>"></span>
                            <% } %>
                        </div>
                        <p>
                            <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">View More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>  
    </div>
<%- include("../partials/footer") %>